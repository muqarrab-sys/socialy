// prettier-ignore
{
  "extends": "@tsconfig/react-native/tsconfig.json",     /* Recommended React Native TSConfig base */
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    /* Completeness */
    "skipLibCheck": true,                                 /* Skip type checking all .d.ts files. */

    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "*": [ "src/*"], 
      "@components/*": ["@/components/index", "@/components/*"],
      "@navigation/*": ["@/navigation/index", "@/navigation/*"],
      "@constants/*": ["@/constants/index", "@/constants/*"],
      "@screens/*": ["@/screens/index", "@/screens/*"],
      "@assets/*": ["@/assets/index", "@/assets/*"],
      "@helpers/*": ["@/helpers/index", "@/helpers/*"],
      "@hooks/*": ["@/hooks/index", "@/hooks/*"],
      "@theme/*": ["@/theme/index", "@/theme/*"],
      "@types/*": ["@/types/*"],
    },
    
  }
}
